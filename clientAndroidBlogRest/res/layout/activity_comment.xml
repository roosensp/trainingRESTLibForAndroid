<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white" >
    <LinearLayout
        android:id="@+id/llnavigation"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/navigation_color"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_titleaci"
            android:layout_width="wrap_content"
           android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="22dip"
            android:paddingLeft="12dip"
             android:textStyle="bold"
             android:gravity="center_vertical"
            android:text="@string/title_activity_article_detail" />
        

	    
        
    </LinearLayout>
<LinearLayout
        android:id="@+id/llcontent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
         <Button
        android:id="@+id/bt_laisser_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    
        android:layout_marginLeft="66dp"
        android:text="@string/edit_comment" />
     
    
      <ListView
        android:id="@+id/lv_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       
        >
    </ListView>
     
        </LinearLayout>
   

   

    

   
</LinearLayout>