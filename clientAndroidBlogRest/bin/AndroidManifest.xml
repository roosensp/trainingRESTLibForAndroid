<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clientandroidblogrest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.clientandroidblogrest.BlogApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
     
        <activity
            android:name="com.example.clientandroidblogrest.activity.ListArticle"
            android:label="@string/title_activity_list_article"
            android:theme="@android:style/Theme.NoTitleBar" >
             <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.activity.ArticleDetailActivity"
            android:label="@string/title_activity_article_detail" 
             android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.activity.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" 
             android:theme="@android:style/Theme.NoTitleBar">
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.SignUP"
            android:label="@string/title_activity_sign_up"
             android:theme="@android:style/Theme.NoTitleBar" >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.CommentActivity"
            android:label="@string/title_activity_comment"
             android:theme="@android:style/Theme.NoTitleBar"  >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.EditCommentActivity"
            android:label="@string/title_activity_edit_comment"
             android:theme="@android:style/Theme.NoTitleBar"  >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.EditArticle"
            android:label="@string/title_activity_edit_article"
             android:theme="@android:style/Theme.NoTitleBar"  >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.ChoiceCommentMenuActivity"
            android:label="@string/title_activity_choice_comment_menu"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.ChoiceValidateArticle"
            android:label="@string/title_activity_choice_validate_article"
            android:theme="@android:style/Theme.Dialog" >
        </activity>
        <activity
            android:name="com.example.clientandroidblogrest.SatistiqueActivity"
            android:label="@string/title_activity_satistique"
             android:theme="@android:style/Theme.NoTitleBar"  >
        </activity>
    </application>

</manifest>