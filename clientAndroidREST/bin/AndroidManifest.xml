<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.clientandroidrest"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
         android:name="com.example.clientandroidrest.ClientAndroidRESTApp"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.clientandroidrest.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.clientandroidrest.activity.CategoriesActivity"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name="com.example.clientandroidrest.activity.LivreActivity"
            android:label="@string/title_activity_livre" >
        </activity>
        <activity
            android:name="com.example.clientandroidrest.activity.CategorieDetailActivity"
            android:label="@string/title_activity_categorie_detail" >
        </activity>
    </application>

</manifest>